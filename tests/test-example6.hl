@ var bar = 1
	
@ var foo : // the statement in the argument is not evaluated yet
	@ set bar = 2
	
@ var barBefore = (@.bar)
	
@ foo _ // this invokes the foo action, and the code is evaluated (_ means no argument)

@ var barAfter = (@.bar)

@ var results =
	@.barBefore
	@.barAfter

//result: [1, 2]